@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/SylvanHOME.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Experience how practices affect teeth age and dental health
                    <a class="btn btn-warning btn-lg" asp-controller="Behaviour" asp-action="List">
                        Get Started
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/SYLVAN2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Experience how practices affect teeth age and dental health
                    <a class="btn btn-warning btn-lg" asp-controller="Behaviour" asp-action="List">
                        Get Started
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/SYLVAN3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Experience how practices affect teeth age and dental health
                    <a class="btn  btn-lg btn-warning" asp-controller="Behaviour" asp-action="List">
                        Get Started
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-4" >
        <h2 class="text-info">All-time Top Players</h2>
        @await Component.InvokeAsync("LeaderBoard")
    </div>
    <div class="col-md-4 ">
        <h2 class="text-info">Statistics</h2>
        @await Component.InvokeAsync("ChartView")
    </div>
    <div class="col-md-4 " >
        <h2 class="text-info">Animated Video</h2>
      @await Component.InvokeAsync("Grouping")
    </div>
</div>
