@model PracticeViewModel

<div class="row checkoutForm">
    <h2>Your Detailed Summary of Practices</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                
                <th>Behaviour</th>
                <th>Short Description</th>
                <th>Frequency</th>
                <th class="text-right">Score</th>
                <th class="text-right">Total Score</th>
                <th class="text-right">Remove Behaviour</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.DentalPractice.PracticeItems)
            {
                <tr>
                    <td class="text-center">@line.Behaviour.BehaviourName</td>
                    <td class="text-left">@line.Behaviour.BehaviourDescription</td>
                <td class="text-left">@line.FrequencyName</td>
                    <td class="text-right">@line.Behaviour.Points.ToString("c")</td>
                    <td class="text-right">
                        @((line.Behaviour.Points).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="Practice" asp-action="RemovePractice" asp-route-BhehaviourId="@line.Behaviour.BehaviourId"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.TotalPoints.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="DentalHealth" asp-action="SubmitPractices">Finish</a>
            
                <a class="btn btn-default" asp-controller="Behaviour" asp-action="List">
                    Add more Behaviour<span class="caret"></span>
                </a>
        </div>
    </div>
</div>